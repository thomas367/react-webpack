{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "jest/globals": true
    },
    "plugins": ["react", "prettier", "jest"],
    "rules": {
        "no-console": 0,
        "linebreak-style": 0,
        "prettier/prettier": "error"
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:import/errors",
        "plugin:import/warnings",
        "plugin:jest/recommended",
        "airbnb-base",
        "prettier"
    ],
    "settings": {
        "import/resolver": {
            "webpack": {
                "config": "webpack.config.dev.js"
            }
        },
        "react": {
            "version": "detect"
        }
    }
}
